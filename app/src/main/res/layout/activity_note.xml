<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_diary"
    android:padding="@dimen/muoi_dp"
    tools:context="com.skyfree.kinhnguyetmangthai.activity.NoteActivity">

    <LinearLayout
        android:layout_marginBottom="@dimen/nam_dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bon_muoi_dp">

        <ImageView
            android:id="@+id/img_back_add_note"
            android:layout_margin="@dimen/nam_dp"   
            android:src="@drawable/ic_back"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <TextView
            android:layout_marginLeft="@dimen/nam_dp"
            android:textColor="@color/colorDone"
            android:textSize="@dimen/hai_muoi_sp"
            android:gravity="center_vertical"
            android:layout_weight="8"
            android:text="@string/add_note"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/img_done_add_note"
            android:layout_margin="@dimen/nam_dp"
            android:src="@drawable/ic_done"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:background="@color/colorDivide"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mot_dp"></LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/nam_dp"
        android:weightSum="10"
        android:background="@drawable/bg_note"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:padding="@dimen/muoi_lam_dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9">

            <LinearLayout
                android:paddingRight="@dimen/hai_muoi_dp"
                android:paddingLeft="@dimen/hai_muoi_dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/img_back_date"
                    android:src="@drawable/btn_back"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/tv_date_add_note"
                    android:textSize="@dimen/muoi_lam_sp"
                    android:textColor="@color/colorRed"
                    android:gravity="center"
                    android:layout_weight="5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

                <ImageView
                    android:id="@+id/img_next_date"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/btn_next" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/mot_dp"
                android:background="@color/colorDivide"></LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="7">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:padding="@dimen/nam_dp"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <ImageView
                            android:src="@drawable/ic_luongkinh"
                            android:layout_weight="1.2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent" />

                        <TextView
                            android:text="@string/menstruation"
                            android:paddingLeft="@dimen/muoi_lam_dp"
                            android:textColor="@color/colorRed"
                            android:textSize="@dimen/muoi_lam_sp"
                            android:gravity="center_vertical"
                            android:layout_weight="5"
                            android:layout_width="0dp"
                            android:layout_height="match_parent" />

                        <me.zhanghai.android.materialratingbar.MaterialRatingBar
                            android:id="@+id/rating_bar_add_note"
                            android:backgroundTint="@color/colorRed"
                            android:layout_width="0dp"
                            android:layout_weight="4"
                            android:layout_height="wrap_content"
                            style="@style/Widget.MaterialRatingBar.RatingBar" />

                    </LinearLayout>

                    <LinearLayout
                        android:background="@drawable/bg_divide"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/mot_dp"></LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear_note_add_note"
                        android:padding="@dimen/nam_dp"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <ImageView
                            android:src="@drawable/ic_ghichu"
                            android:layout_weight="1.2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent" />

                        <TextView
                            android:text="@string/note"
                            android:paddingLeft="@dimen/muoi_lam_dp"
                            android:textColor="@color/colorRed"
                            android:textSize="@dimen/muoi_lam_sp"
                            android:gravity="center_vertical"
                            android:layout_weight="8"
                            android:layout_width="0dp"
                            android:layout_height="match_parent" />

                        <ImageView
                            android:src="@drawable/btn_next"
                            android:layout_weight="1.7"
                            android:layout_width="0dp"
                            android:layout_height="match_parent" />

                    </LinearLayout>

                    <LinearLayout
                        android:background="@drawable/bg_divide"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/mot_dp"></LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear_drug_add_note"
                        android:padding="@dimen/nam_dp"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <ImageView
                            android:src="@drawable/ic_thuoc"
                            android:layout_weight="1.2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent" />

                        <TextView
                            android:text="@string/drug"
                            android:paddingLeft="@dimen/muoi_lam_dp"
                            android:textColor="@color/colorRed"
                            android:textSize="@dimen/muoi_lam_sp"
                            android:gravity="center_vertical"
                            android:layout_weight="8"
                            android:layout_width="0dp"
                            android:layout_height="match_parent" />

                        <ImageView
                            android:src="@drawable/btn_next"
                            android:layout_weight="1.7"
                            android:layout_width="0dp"
                            android:layout_height="match_parent" />

                    </LinearLayout>

                    <LinearLayout
                        android:background="@drawable/bg_divide"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/mot_dp"></LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear_symptom_add_note"
                        android:padding="@dimen/nam_dp"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <ImageView
                            android:src="@drawable/ic_trieuchung"
                            android:layout_weight="1.2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent" />

                        <TextView
                            android:text="@string/symptom"
                            android:paddingLeft="@dimen/muoi_lam_dp"
                            android:textColor="@color/colorRed"
                            android:textSize="@dimen/muoi_lam_sp"
                            android:gravity="center_vertical"
                            android:layout_weight="8"
                            android:layout_width="0dp"
                            android:layout_height="match_parent" />

                        <ImageView
                            android:src="@drawable/btn_next"
                            android:layout_weight="1.7"
                            android:layout_width="0dp"
                            android:layout_height="match_parent" />

                    </LinearLayout>

                    <LinearLayout
                        android:background="@drawable/bg_divide"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/mot_dp"></LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear_mood_add_note"
                        android:padding="@dimen/nam_dp"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <ImageView
                            android:src="@drawable/ic_tamtrang"
                            android:layout_weight="1.2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent" />

                        <TextView
                            android:text="@string/mood"
                            android:paddingLeft="@dimen/muoi_lam_dp"
                            android:textColor="@color/colorRed"
                            android:textSize="@dimen/muoi_lam_sp"
                            android:gravity="center_vertical"
                            android:layout_weight="8"
                            android:layout_width="0dp"
                            android:layout_height="match_parent" />

                        <ImageView
                            android:src="@drawable/btn_next"
                            android:layout_weight="1.7"
                            android:layout_width="0dp"
                            android:layout_height="match_parent" />

                    </LinearLayout>

                    <LinearLayout
                        android:background="@drawable/bg_divide"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/mot_dp"></LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear_weight_add_note"
                        android:padding="@dimen/nam_dp"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <ImageView
                            android:src="@drawable/ic_cannang"
                            android:layout_weight="1.2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent" />

                        <TextView
                            android:text="@string/weight"
                            android:paddingLeft="@dimen/muoi_lam_dp"
                            android:textColor="@color/colorRed"
                            android:textSize="@dimen/muoi_lam_sp"
                            android:gravity="center_vertical"
                            android:layout_weight="8"
                            android:layout_width="0dp"
                            android:layout_height="match_parent" />

                        <ImageView
                            android:src="@drawable/btn_next"
                            android:layout_weight="1.7"
                            android:layout_width="0dp"
                            android:layout_height="match_parent" />

                    </LinearLayout>

                    <LinearLayout
                        android:background="@drawable/bg_divide"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/mot_dp"></LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear_temperature_add_note"
                        android:padding="@dimen/nam_dp"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <ImageView
                            android:src="@drawable/ic_nhietdo"
                            android:layout_weight="1.2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent" />

                        <TextView
                            android:text="@string/temperature"
                            android:paddingLeft="@dimen/muoi_lam_dp"
                            android:textColor="@color/colorRed"
                            android:textSize="@dimen/muoi_lam_sp"
                            android:gravity="center_vertical"
                            android:layout_weight="8"
                            android:layout_width="0dp"
                            android:layout_height="match_parent" />

                        <ImageView
                            android:src="@drawable/btn_next"
                            android:layout_weight="1.7"
                            android:layout_width="0dp"
                            android:layout_height="match_parent" />

                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
