<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="@drawable/bg_main"
    tools:context="com.skyfree.kinhnguyetmangthai.activity.MainActivity">

    <ImageView
        android:background="@drawable/bg_top"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4">

        <LinearLayout
            android:layout_margin="@dimen/hai_muoi_dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:background="@drawable/bg_days_left"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="2">

                <TextView
                    android:paddingLeft="@dimen/muoi_dp"
                    android:id="@+id/days_left_main"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/hai_lam_sp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="2"/>

            </LinearLayout>

            <TextView
                android:paddingLeft="@dimen/muoi_dp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/bg_next_cycle"
                android:gravity="center_vertical"
                android:textSize="@dimen/muoi_lam_sp"
                android:id="@+id/tv_next_cycle_main"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                android:paddingLeft="@dimen/muoi_dp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/bg_easy_to_conceive"
                android:gravity="center_vertical"
                android:textSize="@dimen/muoi_lam_sp"
                android:id="@+id/tv_easy_conceive_main"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="right"
            android:layout_width="@dimen/tram_hai_muoi_dp"
            android:layout_height="match_parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <ImageView
                    android:src="@drawable/bg_message"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TextView
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </FrameLayout>

            <ImageView
                android:src="@drawable/img_pet_cat"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"/>

        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_margin="@dimen/muoi_dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5.5">

    <LinearLayout
        android:background="@drawable/btn_top_btn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"></LinearLayout>

    <LinearLayout
        android:gravity="right"
        android:background="@drawable/btn_calendar"
        android:padding="@dimen/muoi_dp"
        android:id="@+id/linear_calendar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        
        <TextView
            android:textColor="@color/colorRed"
            android:textSize="@dimen/hai_muoi_sp"
            android:gravity="center_vertical"
            android:text="@string/calendar"
            android:layout_width="@dimen/tram_ba_muoi_dp"
            android:layout_height="match_parent" />

    </LinearLayout>
    
    <LinearLayout
        android:gravity="right"
        android:background="@drawable/btn_diary"
        android:padding="@dimen/muoi_dp"
        android:id="@+id/linear_diary"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:textColor="@color/colorRed"
            android:textSize="@dimen/hai_muoi_sp"
            android:gravity="center_vertical"
            android:text="@string/diary"
            android:layout_width="@dimen/tram_ba_muoi_dp"
            android:layout_height="match_parent" />

    </LinearLayout>
    
    <LinearLayout
        android:gravity="right"
        android:background="@drawable/btn_chart"
        android:padding="@dimen/muoi_dp"
        android:id="@+id/linear_chart"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:textColor="@color/colorRed"
            android:textSize="@dimen/hai_muoi_sp"
            android:gravity="center_vertical"
            android:text="@string/chart"
            android:layout_width="@dimen/tram_ba_muoi_dp"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:gravity="right"
        android:background="@drawable/btn_setting"
        android:padding="@dimen/muoi_dp"
        android:id="@+id/linear_setting"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:textColor="@color/colorRed"
            android:textSize="@dimen/hai_muoi_sp"
            android:gravity="center_vertical"
            android:text="@string/setting"
            android:layout_width="@dimen/tram_ba_muoi_dp"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:gravity="right"
        android:background="@drawable/btn_note"
        android:padding="@dimen/muoi_dp"
        android:id="@+id/linear_note"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/hai_muoi_sp"
            android:gravity="center_vertical"
            android:text="@string/note"
            android:layout_width="@dimen/tram_ba_muoi_dp"
            android:layout_height="match_parent" />

    </LinearLayout>

    </LinearLayout>

</LinearLayout>
