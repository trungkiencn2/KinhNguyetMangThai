<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="@dimen/bon_lam_dp"
    android:id="@+id/linear_item_calendar"
    android:background="@drawable/bg_date"
    android:gravity="left">

    <ImageView
        android:id="@+id/img_item_calendar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <TextView
        android:textSize="@dimen/muoi_lam_sp"
        android:padding="@dimen/nam_dp"
        android:gravity="center_vertical"
        android:id="@+id/tv_date_item_calendar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"/>

</LinearLayout>